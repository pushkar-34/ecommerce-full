<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Panel</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-gray-100">
    <nav class="bg-blue-600 text-white px-4 py-3 flex justify-between items-center">
        <h1 class="text-xl font-bold">Admin Panel</h1>
        <div class="flex space-x-4">
            <a href="/dashboard" class="hover:underline">Dashboard</a>
            <a href="/logout" class="hover:underline">Logout</a>
        </div>
    </nav>

    <div class="max-w-6xl mx-auto mt-6">
    
        <section class="bg-white shadow p-6 rounded mb-8">
            <h2 class="text-lg font-bold mb-4">Add Product</h2>
            <form action="/admin/add-product" method="POST" enctype="multipart/form-data" class="grid grid-cols-1 gap-4">
                <input type="text" name="title" placeholder="Product Title" class="border p-2 rounded" required>
                <textarea name="description" placeholder="Product Description" class="border p-2 rounded" required></textarea>
                <input type="number" name="price" placeholder="Price" class="border p-2 rounded" required>
                <input type="file" name="image" accept="image/*" class="border p-2 rounded" required>
                <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Add Product</button>
            </form>
        </section>

        <section class="bg-white shadow p-6 rounded mb-8">
            <h2 class="text-lg font-bold mb-4">My Products</h2>
            <% if (products && products.length > 0) { %>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <% products.forEach(product => { %>
                        <div class="border rounded shadow p-4 bg-gray-50">
                            <img src="/uploads/<%= product.image %>" alt="<%= product.title %>" class="w-full h-40 object-cover rounded mb-3">
                            <h3 class="text-lg font-semibold"><%= product.title %></h3>
                            <p class="text-gray-700 text-sm"><%= product.description %></p>
                            <p class="text-blue-600 font-bold mt-2">$<%= product.price %></p>
                            <form action="/admin/delete-product/<%= product.id %>" method="POST" class="mt-2">
                                <button type="submit" class="bg-red-600 text-white px-3 py-1 rounded hover:bg-red-700">Delete</button>
                            </form>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <p>No products found.</p>
            <% } %>
        </section>

        <!
        <section class="bg-white shadow p-6 rounded">
            <h2 class="text-lg font-bold mb-4">Orders for My Products</h2>
            <% if (orders && orders.length > 0) { %>
                <table class="min-w-full border">
                    <thead>
                        <tr class="bg-gray-200">
                            <th class="px-4 py-2 border">Order ID</th>
                            <th class="px-4 py-2 border">Product</th>
                            <th class="px-4 py-2 border">Buyer</th>
                            <th class="px-4 py-2 border">Status</th>
                            <th class="px-4 py-2 border">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach(order => { %>
                            <tr>
                                <td class="px-4 py-2 border"><%= order.id %></td>
                                <td class="px-4 py-2 border"><%= order.productTitle %></td>
                                <td class="px-4 py-2 border"><%= order.buyerEmail %></td>
                                <td class="px-4 py-2 border"><%= order.status %></td>
                                <td class="px-4 py-2 border">
                                    <form action="/admin/update-status/<%= order.id %>" method="POST" class="flex space-x-2">
                                        <select name="status" class="border rounded p-1">
                                            <option value="Pending" <%= order.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                                            <option value="Shipped" <%= order.status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                                            <option value="Delivered" <%= order.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                                        </select>
                                        <button type="submit" class="bg-green-600 text-white px-3 py-1 rounded hover:bg-green-700">Update</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No orders found for your products.</p>
            <% } %>
        </section>
    </div>
</body>
</html>
